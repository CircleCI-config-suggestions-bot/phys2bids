FROM cirrusci/windowsservercore:2019

RUN powershell -NoLogo -NoProfile -Command \
    choco install -y --no-progress make python ; \
    refreshenv ; \
    $env:Path += ";c:\python39"; \
    $env:Path += ";c:\python39\Scripts"; \
    refreshenv; \
    echo $env:path; \
    pip install --upgrade certifi ; \
    pip install wheel